{
    "type": "object",
    "title": "GPIO Driver Configuration Type",
    "description": "Digital inputs and outputs configuration",
    "configFile": {
        "path": "/etc/wb-homa-gpio.conf",
        "service": "wb-homa-gpio"
    },
    "definitions": {
        "gpio_channel": {
            "type": "object",
            "title": "GPIO channel",
            "headerTemplate": "GPIO {{ |self.gpio|}} {{(|self.name|)}}",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "MQTT id",
                    "minLength" : 1,
                    "propertyOrder": 1
                },
                "gpio": {
                    "type": "integer",
                    "title": "GPIO number",
                    "propertyOrder": 2
                },
                "direction": {
                    "type": "string",
                    "title": "Direction",
                    "enum": [
                        "input",
                        "output"
                    ],
                    "enum_titles" : ["Input", "Output"],
                    "default": "input",
                    "propertyOrder": 3
                },
                "inverted": {
                    "type": "boolean",
                    "title": "Invert polarity",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 4
                },
                "type": {
                    "type": "string",
                    "title": "Pulse counter type (if any)",
                    "enum": [
                        "",
                        "watt_meter",
                        "water_meter"
                    ],
                    "default": "",
                    "propertyOrder": 5
                },
                "multiplier": {
                    "type": "number",
                    "title": "Number of pulses per unit (kWh or m^3)",
                    "propertyOrder": 6
                },
                "decimal_points_current" : {
                    "type" : "number",
                    "title" : "Number of decimal places in _current topic (pulse counters only)",
                    "default" : 2,
                    "min" : 0,
                    "propertyOrder": 7
                },
                "decimal_points_total" : {
                    "type" : "number",
                    "title" : "Number of decimal places in _total topic (pulse counters only)",
                    "default" : 2,
                    "min" : 0,
                    "propertyOrder": 8
                },
                "initial_state": {
                    "type": "boolean",
                    "title": "Initial state for output GPIO",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 9
                }

            },
            "defaultProperties": [
                "name",
                "gpio",
                "direction"
            ]
        },
        "gpio_line": {
            "type": "object",
            "title": "GPIO line",
            "headerTemplate": "GPIO line {{ |self.offset|}} {{(|self.name|)}}",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "MQTT id",
                    "minLength" : 1,
                    "propertyOrder": 1
                },
                "offset": {
                    "type": "integer",
                    "title": "GPIO line offset",
                    "propertyOrder": 2
                },
                "direction": {
                    "type": "string",
                    "title": "Direction",
                    "enum": [
                        "input",
                        "output"
                    ],
                    "enum_titles" : ["Input", "Output"],
                    "default": "input",
                    "propertyOrder": 3
                },
                "inverted": {
                    "type": "boolean",
                    "title": "Invert polarity",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 4
                },
                "type": {
                    "type": "string",
                    "title": "Pulse counter type (if any)",
                    "enum": [
                        "",
                        "watt_meter",
                        "water_meter"
                    ],
                    "default": "",
                    "propertyOrder": 5
                },
                "multiplier": {
                    "type": "number",
                    "title": "Number of pulses per unit (kWh or m^3)",
                    "propertyOrder": 6
                },
                "decimal_points_current" : {
                    "type" : "number",
                    "title" : "Number of decimal places in _current topic (pulse counters only)",
                    "default" : 2,
                    "min" : 0,
                    "propertyOrder": 7
                },
                "decimal_points_total" : {
                    "type" : "number",
                    "title" : "Number of decimal places in _total topic (pulse counters only)",
                    "default" : 2,
                    "min" : 0,
                    "propertyOrder": 8
                },
                "initial_state": {
                    "type": "boolean",
                    "title": "Initial state for output GPIO",
                    "default": false,
                    "_format": "checkbox",
                    "propertyOrder": 9
                }
            },
            "required": [
                "name",
                "offset"
            ],
            "defaultProperties": [
                "name",
                "offset",
                "direction"
            ]
        },
        "gpio_chip": {
            "type": "object",
            "title": "GPIO chip",
            "headerTemplate": "GPIO chip {{at |self.path|}} {{number |self.number|}}",

            "properties": {
                "path": {
                    "type": "string",
                    "title": "Path to GPIO chip",
                    "propertyOrder": 1
                },
                "number": {
                    "type": "integer",
                    "title": "Number of GPIO chip",
                    "propertyOrder": 1
                },
                "lines": {
                    "type": "array",
                    "title": "Lines of GPIO chip",
                    "items": {
                        "$ref": "#/definitions/gpio_line"
                    },
                    "minItems": 1,
                    "propertyOrder": 2
                }
            },
            "oneOf": [
                {
                    "title": "By device path",
                    "required": [
                        "path",
                        "lines"
                    ]
                },
                {
                    "title": "By number",
                    "required": [
                        "number",
                        "lines"
                    ]
                }
            ]
        }
    },
    "oneOf":[
        {
            "title": "Sysfs (deprecated)",
            "properties": {
                "device_name": {
                    "type": "string",
                    "title": "MQTT device name",
                    "default": "GPIOs",
                    "propertyOrder": 1
                },
                "channels": {
                    "type": "array",
                    "title": "List of GPIO channels",
                    "items": {
                        "$ref": "#/definitions/gpio_channel"
                    },
                    "minItems": 1,
                    "_format": "",
                    "propertyOrder": 2
                }
            },
            "required": [
                "device_name",
                "channels"
            ]
        },
        {
            "title": "Charactrer Device",
            "properties": {
                "device_name": {
                    "type": "string",
                    "title": "MQTT device name",
                    "default": "GPIOs",
                    "propertyOrder": 1
                },
                "chips": {
                    "type": "array",
                    "title": "List of GPIO chips",
                    "items":{
                        "$ref": "#/definitions/gpio_chip"
                    },
                    "minItems": 1,
                    "_format": "",
                    "propertyOrder": 2
                }
            },
            "required": [
                "device_name",
                "chips"
            ]
        }
    ]
}
